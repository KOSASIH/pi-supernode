{
  "node": {
    "name": "SuperNode",
    "version": "1.0.0",
    "network": "mainnet",
    "rpc": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 8545,
      "username": "your_rpc_username",
      "password": "your_rpc_password",
      "cors": ["http://localhost:3000"],
      "timeout": 30000
    },
    "p2p": {
      "port": 30303,
      "maxPeers": 50,
      "discovery": {
        "enabled": true,
        "bootstrapNodes": [
          "enode://node1@ip1:port1",
          "enode://node2@ip2:port2"
        ]
      }
    },
    "logging": {
      "level": "info",
      "file": "logs/supernode.log",
      "maxSize": "10m",
      "maxFiles": "5"
    },
    "security": {
      "enableFirewall": true,
      "allowedIPs": [
        "192.168.1.0/24",
        "your.trusted.ip.address"
      ],
      "blocklist": [
        "malicious.ip.address"
      ]
    },
    "performance": {
      "maxConnections": 100,
      "enableCaching": true,
      "cacheSize": "512MB",
      "enableCompression": true
    },
    "database": {
      "type": "leveldb",
      "path": "./data",
      "backup": {
        "enabled": true,
        "interval": "24h"
      }
    },
    "api": {
      "enabled": true,
      "basePath": "/api/v1",
      "rateLimit": {
        "enabled": true,
        "maxRequests": 100,
        "windowMs": 60000
      }
    }
  }
}
